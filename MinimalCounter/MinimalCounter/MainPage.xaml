<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:MinimalCounter"
             mc:Ignorable="d"
             x:Class="MinimalCounter.MainPage">

    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Transparent">
            <Button Text="{Binding CounterValueString}" TextColor="DarkOrange" BackgroundColor="Black"
                Pressed="IncrementButton_Pressed"
                Released="IncrementButton_Released"
                FontSize="Header"
                WidthRequest="{Binding WidthString}"
                HeightRequest="{Binding HeightString}"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Start"
                FontAttributes="Bold" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>

